<!DOCTYPE html>
<html>
<head>
  <title>Blackandgold</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<%= link_to 'Products', products_path %>
<%= link_to 'Events', events_path %>
<%= link_to 'Contact', contact_path %>

<% if @cart.present? %>
<div class="cart">
<div class="cart_title"> Your Cart</div>

<%= @cart %><br>
<% @lines = @cart.split("A") %>
<%= @lines %><br><br><br>
<%= @lines.each do |f| %>
<% @each =  f %>
<%= @each %><br>
<%= @each.split("B") %><br><br>
<% @lineprod = Product.find(@each[2]).name %>
<%= @lineprod %><br><br><br>
<%end%>




<%= button_to "Clear Cart", :controller => 'cart', :action => 'destroy' %>
</div>
<% end %>
<%= yield %>

</body>
</html>
